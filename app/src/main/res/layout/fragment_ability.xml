                    android:textColor="@color/labels_text_classic"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/actionOrBonusAction_editText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/actionOrBonusAction_editText"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:background="@color/inputs_classic"
                    android:ems="10"
                    android:fadeScrollbars="false"
                    android:foregroundGravity="top"
                    android:gravity="center_horizontal|center_vertical"
                    android:inputType="textMultiLine|textPersonName"
                    android:isScrollContainer="true"
                    android:maxLines="20"
                    android:nestedScrollingEnabled="true"
                    android:overScrollMode="always"
                    android:padding="5dp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:selectAllOnFocus="false"
                    android:textAlignment="gravity"
                    android:textColor="@color/text_classic"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/copper_txtView2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
