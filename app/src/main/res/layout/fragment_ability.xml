                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/abilityRange_editText"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:background="@color/inputs_classic"
                    android:ems="10"
                    android:fadeScrollbars="false"
                    android:foregroundGravity="top"
                    android:gravity="center_horizontal|center_vertical"
                    android:inputType="textMultiLine|textPersonName"
                    android:isScrollContainer="true"
                    android:maxLines="20"
                    android:nestedScrollingEnabled="true"
                    android:overScrollMode="always"
                    android:padding="5dp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:selectAllOnFocus="false"
                    android:textAlignment="gravity"
                    android:textColor="@color/text_classic"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/copper_txtView9" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout14"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/constraintLayout15"
                app:layout_constraintStart_toEndOf="@+id/constraintLayout16"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout13">

                <TextView
                    android:id="@+id/copper_txtView7"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/casting_time"
                    android:textAlignment="center"
                    android:textColor="@color/labels_text_classic"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/abilityCasttingTime_editText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/abilityCasttingTime_editText"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
